<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <%= link_to "Something is missing!",
                url_for(@user) + ".pdf",
                data: { confirm: "This will download a PDF to your computer. Click OK to proceed." } %>
  </aside>
  <div class="col-md-8">
    <% if @user.items.any? %>
      <h3>Items (<%= @user.items.count %>)</h3>
      <ol class="items">
        <%= render @items %>
      </ol>
      <%= will_paginate @items %>
    <% end %>
  </div>
</div>
