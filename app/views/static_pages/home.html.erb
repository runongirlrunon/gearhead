<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="item_form">
        <%= render 'shared/item_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Item Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to Gearhead</h1>

  <h2>
    This is the home page for Gearhead.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("guitar.png", alt: "guitar"),
            'http://runongirlrunon.github.io' %>
<% end %>
